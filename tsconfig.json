{
  "compilerOptions": {
    "target": "ES2020", // Use ES2020 for modern JavaScript
    "module": "ESNext", // ESM output (important)
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true, // Generate .d.ts files for TypeScript users
    "declarationDir": "./dist/types", // Declaration output
    "outDir": "./dist", // Transpiled JS output
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
